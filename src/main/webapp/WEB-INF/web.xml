<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>TaskServlet</servlet-name>
    <servlet-class>main.todo.servlet.TaskServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DoneServlet</servlet-name>
    <servlet-class>main.todo.servlet.DoneServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AuthServlet</servlet-name>
    <servlet-class>main.todo.servlet.AuthServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegServlet</servlet-name>
    <servlet-class>main.todo.servlet.RegServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CatServlet</servlet-name>
    <servlet-class>main.todo.servlet.CatServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>TaskServlet</servlet-name>
    <url-pattern>/tasks</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DoneServlet</servlet-name>
    <url-pattern>/done</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AuthServlet</servlet-name>
    <url-pattern>/auth</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegServlet</servlet-name>
    <url-pattern>/reg</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CatServlet</servlet-name>
    <url-pattern>/categories</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>login.html</welcome-file>
  </welcome-file-list>
</web-app>
